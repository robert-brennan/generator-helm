{
    "name": "@vamship/generator-helm",
    "version": "1.0.1",
    "description": "Yeoman generator for kubernetes helm charts",
    "homepage": "",
    "author": {
        "name": "Vamshi K Ponnapalli",
        "email": "vamshi.ponnapalli@gmail.com",
        "url": ""
    },
    "files": [
        "generators",
        "utils"
    ],
    "main": "generators/index.js",
    "keywords": [
        "kubernetes",
        "package",
        "helm",
        "yeoman-generator"
    ],
    "devDependencies": {
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-xo": "^0.20.1",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^0.14.3",
        "jest": "^22.0.6",
        "lint-staged": "^6.1.1",
        "nsp": "^3.2.1",
        "prettier": "^1.11.1",
        "yeoman-assert": "^3.1.0",
        "yeoman-test": "^1.7.0"
    },
    "engines": {
        "npm": ">= 4.0.0"
    },
    "dependencies": {
        "chalk": "^2.1.0",
        "globby": "^8.0.1",
        "yeoman-generator": "^2.0.1",
        "yosay": "^2.0.1"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "scripts": {
        "prepublishOnly": "nsp check",
        "pretest": "eslint .",
        "precommit": "lint-staged",
        "test": "jest"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "xo",
            "prettier"
        ],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "printWidth": 90
                }
            ]
        },
        "plugins": [
            "prettier"
        ]
    },
    "repository": "vamship/generator-helm",
    "license": "MIT"
}
